<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewSongName"
        android:layout_width="197dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="songName"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=":"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintStart_toEndOf="@+id/txt_minute"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_minute"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintStart_toEndOf="@+id/textViewSongName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintStart_toEndOf="@+id/txt_dots"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>